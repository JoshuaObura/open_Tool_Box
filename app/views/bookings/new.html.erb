<div class="container">
  <h2>Create a new booking</h2>

  <%= simple_form_for [@tool, @booking] do |f| %>
    <div class="form-inputs">
      <%= f.input :start_date %>
      <%= f.input :end_date %>
    </div>

    <div class="form-actions btn">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
  <% end %>

</div>
