<div class="container">
  <h1>My Dashboard</h1>

  <div class="container-tools">
    <h2>My Tools</h2>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Category</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% current_user.tools.each do |tool| %>
          <tr>
            <td><%= tool.name %></td>
            <td><%= tool.description %></td>
            <td><%= tool.category %></td>
            <td><%= link_to 'Show', tool %></td>
            <td><%= link_to 'Edit', edit_tool_path(tool) %></td>
            <td><%= link_to 'Destroy', tool, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="container-bookings">
    <h2>My Bookings</h2>

    <table>
      <thead>
        <tr>
          <th>Tool Name</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% current_user.bookings.each do |booking| %>
          <tr>
            <td><%= booking.tool.name %></td>
            <td><%= booking.start_date %></td>
            <td><%= booking.start_date %></td>
            <td><%= link_to 'Show', booking %></td>
            <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
