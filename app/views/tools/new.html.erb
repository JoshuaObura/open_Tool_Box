<h1> List a Tool </h1>
<%= simple_form_for(@tool) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.input :category, as: :select, collection: @category, prompt: 'Select category', label: false %>
  <%= f.submit %>
  <% end %>

  <p><%= link_to ('<i class="fas fa-home"></i>').html_safe, tools_path%></p>