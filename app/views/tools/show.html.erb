
<div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
<h1>Tool Hire</h1>
  <div class="center">
    <div class="card-tool">
      <img src="" />
        <div class="card-tool-info">
          <h2><%= @tool.name %></h2>
          <p><%= @tool.description %></p> 
          <p><%= @tool.category %> </p>
        </div>
        <h2 class="card-tool-price">£££</h2>
        <img src="" class="card-trip-user avatar-bordered" />
    </div>
      <div class="card-tool-icons">
        <p>
          <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#icons" aria-expanded="false" aria-controls="collapseExample">
            More Info
          </button>
        </p>
          <div class="collapse" id="icons">
            <div class="card card-body">
              some stuff
            </div>
          </div>
      </div>
      <button>Make A Booking</button>
  </div>
 <p><%= link_to ('<i class="fas fa-arrow-circle-left"></i>').html_safe, tools_path %></p>
 <p><%= link_to edit_tool_path(@tool) do  %>
 <i class="fas fa-edit"></i>
 <% end %>
 <%= link_to ('<i class="fas fa-trash"></i>').html_safe, tool_path(@tool), method: :delete, data: { confirm: "Are you sure you want to delete" + @tool.name } %>
 </p>
</div>
